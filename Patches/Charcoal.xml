<Patch>

    <!--==========
    Charcoal {Survivalist's Additions, Coal Expanded, Apothecary (Continued), Expanded Materials - Metals}
    ==========-->

    <!--DUR Coal, with whitelist-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mantrasong.SurvAdd.1</li>
            <li>neceros.coalexpanded</li>
            <li>Mlie.Apothecary</li>
            <li>Argon.VMEu</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_Charcoal" ParentName="ResourceBase">
                            <defName>DZ_Charcoal</defName>
                            <label>Charcoal</label>
                            <description>Charcoal: A carbon based organic product that underwent pyrolysis.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <soundInteract>ChunkRock_Drop</soundInteract>
                            <soundDrop>ChunkRock_Drop</soundDrop>
                            <stackLimit>25</stackLimit>
                            <statBases>
                                <MarketValue>1.0</MarketValue>
                                <MaxHitPoints>100</MaxHitPoints>
                                <Flammability>1.0</Flammability>
                                <Mass>0.3</Mass>
                            </statBases>
                            <thingCategories>
                                <li>ResourcesRaw</li>
                            </thingCategories>
                            <tradeTags />
                            <stuffProps />
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Survivalist's Additions-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mantrasong.SurvAdd.1</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Cupro/Item/Material/Charcoal</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                                <onGroundRandomRotateAngle>45</onGroundRandomRotateAngle>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData</xpath>
                        <value>
                            <texPath>Cupro/Item/Material/Charcoal</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <onGroundRandomRotateAngle>45</onGroundRandomRotateAngle>
                        </value>
                    </nomatch>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="SRV_Charcoal"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Coal Expanded-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>neceros.coalexpanded</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Charcoal</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData</xpath>
                        <value>
                            <texPath>Charcoal</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                        </value>
                    </nomatch>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Charcoal"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Apothecary (Continued)-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.Apothecary</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Things/Item/Resource/Misc/AYCharcoal/AYCharcoal</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData</xpath>
                        <value>
                            <texPath>Things/Item/Resource/Misc/AYCharcoal/AYCharcoal</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                        </value>
                    </nomatch>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="AYCharcoal"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Expanded Materials - Metals-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Argon.VMEu</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Things/Item/Resource/VMEu_Charcoal</texPath>
                                <graphicClass>Graphic_StackCount</graphicClass>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Charcoal"]/graphicData</xpath>
                        <value>
                            <texPath>Things/Item/Resource/VMEu_Charcoal</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                        </value>
                    </nomatch>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="VMEu_Charcoal"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--
        Universal Charcoal Replacements
        -->
    <!--Charcoal = Coal Expanded-->
    <!--VMEu_Charcoal = Expanded Materials - Metals-->
    <!--SRV_Charcoal = Coal Expanded-->
    <!--AYCharcoal = Coal Expanded-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/TraderKindDef/stockGenerators/*//thingDef[text()="Charcoal" or text()="VMEu_Charcoal" or text()="SRV_Charcoal" or text()="AYCharcoal"]</xpath>
        <value>
            <thingDef>DZ_Charcoal</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@ParentName="RockBase"]/building/mineableThing[text()="Charcoal" or text()="VMEu_Charcoal" or text()="SRV_Charcoal" or text()="AYCharcoal"]</xpath>
        <value>
            <mineableThing>DZ_Charcoal</mineableThing>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>        <!--MANDATORY due to vanilla bug-->
        <xpath>/Defs/ThingDef/modExtensions/*//products/*[self::Charcoal or self::VMEu_Charcoal or self::SRV_Charcoal or self::AYCharcoal] 
            | /Defs/ThingDef/costList/*[self::Charcoal or self::VMEu_Charcoal or self::SRV_Charcoal or self::AYCharcoal]
            | /Defs/RecipeDef/products/*[self::Charcoal or self::VMEu_Charcoal or self::SRV_Charcoal or self::AYCharcoal]
            | /Defs/TerrainDef/costList/*[self::Charcoal or self::VMEu_Charcoal or self::SRV_Charcoal or self::AYCharcoal]
        </xpath>
        <name>DZ_Charcoal</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li[text()="Charcoal" or text()="VMEu_Charcoal" or text()="SRV_Charcoal" or text()="AYCharcoal"] 
            | /Defs/RecipeDef/ingredients/*//filter/thingDefs/li[text()="Charcoal" or text()="VMEu_Charcoal" or text()="SRV_Charcoal" or text()="AYCharcoal"]
            | /Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="Charcoal" or text()="VMEu_Charcoal" or text()="SRV_Charcoal" or text()="AYCharcoal"]
            | /Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="Charcoal" or text()="VMEu_Charcoal" or text()="SRV_Charcoal" or text()="AYCharcoal"]
        </xpath>
        <value>
            <li>DZ_Charcoal</li>
        </value>
    </Operation>

</Patch>