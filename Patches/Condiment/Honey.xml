                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="ST_WildHoneyTree" or defName="Plant_TreeBee"]/plant/harvestedThingDef</xpath>
