                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="Rawgrape"]</xpath>
                    <value>
                        <thingDef>DZ_RawGrape</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="Rawgrape"]</xpath>
                    <value>
                        <li>DZ_RawGrape</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
