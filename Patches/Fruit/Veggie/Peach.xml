<Patch>

    <!--==========
    Peach
    Universal Replacements
    ==========-->
    <!--RC2_RawPeaches = [1.0, 1.1] RimCuisine 2 Core-->
    <!--Rawpeach = VGP Vegetable Garden-->
    <!--VCE_RawPeach = Vanilla Plants Expanded-->

    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
            <li>dismarzero.vgp.vgpvegetablegarden</li>
            <li>vanillaexpanded.vplantse</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>

                <ThingDef Name="DZ_RawPeach" ParentName="DZ_FruitVeggieBase">
                    <defName>DZ_RawPeach</defName>
                    <label>peachs</label>
                    <description>Peachs: Edible fruit produced by a peach tree.</description>
                    <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                    <graphicData />
                    <statBases>
                        <MarketValue>1.2</MarketValue>
                    </statBases>
                    <ingestible>
                        <preferability>RawTasty</preferability>
                        <tasteThought />
                        <foodType>VegetableOrFruit</foodType>
                    </ingestible>
                    <comps>
                        <li Class="CompProperties_Rottable">
                            <daysToRotStart>15</daysToRotStart>
                            <rotDestroys>true</rotDestroys>
                        </li>
                    </comps>
                </ThingDef>

            </value>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--[1.0, 1.1] RimCuisine 2 Core-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawPeach"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>RC2_Things/RC2_Veg/Peaches</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="RC2_PlantPeachTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawPeach</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="RC2_RawPeaches"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="RC2_RawPeaches"]</xpath>
                    <value>
                        <thingDef>DZ_RawPeach</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="RC2_RawPeaches"]</xpath>
                    <value>
                        <li>DZ_RawPeach</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//RC2_RawPeaches</xpath>
                    <name>DZ_RawPeach</name>
                </li>

            </operations>
        </match>
    </Operation>

    <!--VGP Vegetable Garden-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>dismarzero.vgp.vgpvegetablegarden</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawPeach"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>Things/Fruits/peach</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="WildPeachTree" or defName="PlantPeachTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawPeach</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Rawpeach"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="Rawpeach"]</xpath>
                    <value>
                        <thingDef>DZ_RawPeach</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="Rawpeach"]</xpath>
                    <value>
                        <li>DZ_RawPeach</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//Rawpeach</xpath>
                    <name>DZ_RawPeach</name>
                </li>

            </operations>
        </match>
    </Operation>

    <!--Vanilla Plants Expanded-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>vanillaexpanded.vplantse</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawPeach"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>Things/Items/Raw/VCE_Peaches</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_PeachTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawPeach</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="VCE_RawPeach"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="VCE_RawPeach"]</xpath>
                    <value>
                        <thingDef>DZ_RawPeach</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="VCE_RawPeach"]</xpath>
                    <value>
                        <li>DZ_RawPeach</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//VCE_RawPeach</xpath>
                    <name>DZ_RawPeach</name>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>