<Patch>

    <!--==========
    Fig
    Universal Replacements
    ==========-->
    <!--RC2_RawFigs = [1.0, 1.1] RimCuisine 2 Core-->
    <!--Rawfig = VGP Vegetable Garden-->

    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
            <li>dismarzero.vgp.vgpvegetablegarden</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>
                <ThingDef Name="DZ_RawFig" ParentName="DZ_FruitVeggieBase">
                    <defName>DZ_RawFig</defName>
                    <label>figs</label>
                    <description>Figs: Edible fruit produced by a fig tree.</description>
                    <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                    <graphicData />
                    <statBases>
                        <MarketValue>1.2</MarketValue>
                    </statBases>
                    <ingestible>
                        <preferability>RawTasty</preferability>
                        <tasteThought />
                        <foodType>VegetableOrFruit</foodType>
                    </ingestible>
                    <comps>
                        <li Class="CompProperties_Rottable">
                            <daysToRotStart>15</daysToRotStart>
                            <rotDestroys>true</rotDestroys>
                        </li>
                    </comps>
                </ThingDef>
            </value>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--[1.0, 1.1] RimCuisine 2 Core-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawFig"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>RC2_Things/RC2_Veg/Figs</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="RC2_PlantFigTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawFig</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="RC2_RawFigs"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="RC2_RawFigs"]</xpath>
                    <value>
                        <thingDef>DZ_RawFig</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="RC2_RawFigs"]</xpath>
                    <value>
                        <li>DZ_RawFig</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//RC2_RawFigs</xpath>
                    <name>DZ_RawFig</name>
                </li>

            </operations>
        </match>
    </Operation>

    <!--VGP Vegetable Garden-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>dismarzero.vgp.vgpvegetablegarden</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawFig"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>Things/Fruits/fig</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="FigTree" or defName="WildFigTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawFig</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Rawfig"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="Rawfig"]</xpath>
                    <value>
                        <thingDef>DZ_RawFig</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="Rawfig"]</xpath>
                    <value>
                        <li>DZ_RawFig</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//Rawfig</xpath>
                    <name>DZ_RawFig</name>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>