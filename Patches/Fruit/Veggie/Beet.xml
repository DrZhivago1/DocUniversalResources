                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="VCE_RawBeets"]</xpath>
                    <value>
                        <li>DZ_RawBeet</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//VCE_RawBeets</xpath>
                    <name>DZ_RawBeet</name>
                </li>

            </operations>
