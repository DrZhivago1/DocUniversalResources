<Patch>

    <!--==========
    Banana 
    Universal Replacements
    ==========-->
    <!--RC2_RawBanana = [1.0, 1.1] RimCuisine 2 Core-->
    <!--Rawbanana = VGP Vegetable Garden-->
    <!--VCE_RawBanana = Vanilla Plants Expanded-->

    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
            <li>dismarzero.vgp.vgpvegetablegarden</li>
            <li>vanillaexpanded.vplantse</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>
                <ThingDef Name="DZ_RawBanana" ParentName="DZ_FruitVeggieBase">
                    <defName>DZ_RawBanana</defName>
                    <label>bananas</label>
                    <description>Bananas: Edible fruit produced by a banana tree.</description>
                    <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                    <graphicData />
                    <statBases>
                        <MarketValue>1.2</MarketValue>
                    </statBases>
                    <ingestible>
                        <preferability>RawTasty</preferability>
                        <tasteThought/>
                        <foodType>VegetableOrFruit</foodType>
                    </ingestible>
                    <comps>
                        <li Class="CompProperties_Rottable">
                            <daysToRotStart>15</daysToRotStart>
                            <rotDestroys>true</rotDestroys>
                        </li>
                    </comps>
                </ThingDef>
            </value>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--[1.0, 1.1] RimCuisine 2 Core-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawBanana"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>RC2_Things/RC2_Veg/Banana</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="RC2_PlantBananaTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawBanana</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="RC2_RawBanana"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="RC2_RawBanana"]</xpath>
                    <value>
                        <thingDef>DZ_RawBanana</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="RC2_RawBanana"]</xpath>
                    <value>
                        <li>DZ_RawBanana</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//RC2_RawBanana</xpath>
                    <name>DZ_RawBanana</name>
                </li>

            </operations>
        </match>
    </Operation>

    <!--VGP Vegetable Garden-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>dismarzero.vgp.vgpvegetablegarden</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawBanana"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>Things/Fruits/banana</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="WildBananaTree" or defName="PlantBananaTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawBanana</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Rawbanana"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="Rawbanana"]</xpath>
                    <value>
                        <thingDef>DZ_RawBanana</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="Rawbanana"]</xpath>
                    <value>
                        <li>DZ_RawBanana</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//Rawbanana</xpath>
                    <name>DZ_RawBanana</name>
                </li>

            </operations>
        </match>
    </Operation>

    <!--Vanilla Plants Expanded-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>vanillaexpanded.vplantse</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawBanana"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>Things/Items/Raw/VCE_Bananas</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_BananaTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawBanana</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="VCE_RawBanana"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="VCE_RawBanana"]</xpath>
                    <value>
                        <thingDef>DZ_RawBanana</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="VCE_RawBanana"]</xpath>
                    <value>
                        <li>DZ_RawBanana</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//VCE_RawBanana</xpath>
                    <name>DZ_RawBanana</name>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>