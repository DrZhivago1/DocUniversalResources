<Patch>

    <!--==========
    Orange
    Universal Replacements
    ==========-->
    <!--RC2_RawOrange = [1.0, 1.1] RimCuisine 2 Core-->
    <!--Raworange = VGP Vegetable Garden-->
    <!--VCE_RawOrange = Vanilla Plants Expanded-->

    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
            <li>dismarzero.vgp.vgpvegetablegarden</li>
            <li>vanillaexpanded.vplantse</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>

                <ThingDef Name="DZ_RawOrange" ParentName="DZ_FruitVeggieBase">
                    <defName>DZ_RawOrange</defName>
                    <label>oranges</label>
                    <description>Oranges: Edible fruit produced by an orange tree.</description>
                    <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                    <graphicData />
                    <statBases>
                        <MarketValue>1.2</MarketValue>
                    </statBases>
                    <ingestible>
                        <preferability>RawTasty</preferability>
                        <tasteThought />
                        <foodType>VegetableOrFruit</foodType>
                    </ingestible>
                    <comps>
                        <li Class="CompProperties_Rottable">
                            <daysToRotStart>15</daysToRotStart>
                            <rotDestroys>true</rotDestroys>
                        </li>
                    </comps>
                </ThingDef>

            </value>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--[1.0, 1.1] RimCuisine 2 Core-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawOrange"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>RC2_Things/RC2_Veg/Orange</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="RC2_PlantOrangeTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawOrange</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="RC2_RawOrange"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="RC2_RawOrange"]</xpath>
                    <value>
                        <thingDef>DZ_RawOrange</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="RC2_RawOrange"]</xpath>
                    <value>
                        <li>DZ_RawOrange</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//RC2_RawOrange</xpath>
                    <name>DZ_RawOrange</name>
                </li>

            </operations>
        </match>
    </Operation>

    <!--VGP Vegetable Garden-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>dismarzero.vgp.vgpvegetablegarden</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawOrange"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>Things/Fruits/orange</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="WildorangeTree" or defName="PlantorangeTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawOrange</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Raworange"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="Raworange"]</xpath>
                    <value>
                        <thingDef>DZ_RawOrange</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="Raworange"]</xpath>
                    <value>
                        <li>DZ_RawOrange</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//Raworange</xpath>
                    <name>DZ_RawOrange</name>
                </li>

            </operations>
        </match>
    </Operation>

    <!--Vanilla Plants Expanded-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>vanillaexpanded.vplantse</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawOrange"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>Things/Items/Raw/VCE_Oranges</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_OrangeTree"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawOrange</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="VCE_RawOrange"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="VCE_RawOrange"]</xpath>
                    <value>
                        <thingDef>DZ_RawOrange</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="VCE_RawOrange"]</xpath>
                    <value>
                        <li>DZ_RawOrange</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//VCE_RawOrange</xpath>
                    <name>DZ_RawOrange</name>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>