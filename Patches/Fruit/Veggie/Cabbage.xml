<Patch>

    <!--==========
    Cabbage 
    Universal Replacements
    ==========-->
    <!--RC2_RawCabbages = [1.0, 1.1] RimCuisine 2 Core-->
    <!--VCE_Cabbage = Vanilla Plants Expanded-->

    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
            <li>vanillaexpanded.vplantse</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>
                <ThingDef Name="DZ_RawCabbage" ParentName="DZ_FruitVeggieBase">
                    <defName>DZ_RawCabbage</defName>
                    <label>cabbages</label>
                    <description>Cabbages: My cabbages!</description>
                    <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                    <graphicData />
                    <statBases>
                        <MarketValue>1.2</MarketValue>
                    </statBases>
                    <ingestible>
                        <tasteThought />
                        <foodType>VegetableOrFruit</foodType>
                    </ingestible>
                    <comps>
                        <li Class="CompProperties_Rottable">
                            <daysToRotStart>30</daysToRotStart>
                            <rotDestroys>true</rotDestroys>
                        </li>
                    </comps>
                </ThingDef>
            </value>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--[1.0, 1.1] RimCuisine 2 Core-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawCabbage"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>RC2_Things/RC2_Veg/Cabbages</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="RC2_CabbageBase"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawCabbage</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="RC2_RawCabbages"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="RC2_RawCabbages"]</xpath>
                    <value>
                        <thingDef>DZ_RawCabbage</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="RC2_RawCabbages"]</xpath>
                    <value>
                        <li>DZ_RawCabbage</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//RC2_RawCabbages</xpath>
                    <name>DZ_RawCabbage</name>
                </li>

            </operations>
        </match>
    </Operation>

    <!--Vanilla Plants Expanded-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>vanillaexpanded.vplantse</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawCabbage"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>Things/Plant/Crops/VCE_Cabbage</texPath>
                                    <graphicClass>Graphic_Random</graphicClass>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_RawCabbage"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawCabbage</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="VCE_Cabbage"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="VCE_Cabbage"]</xpath>
                    <value>
                        <thingDef>DZ_RawCabbage</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="VCE_Cabbage"]</xpath>
                    <value>
                        <li>DZ_RawCabbage</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//VCE_Cabbage</xpath>
                    <name>DZ_RawCabbage</name>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>