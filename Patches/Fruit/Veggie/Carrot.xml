<Patch>

    <!--==========
    Carrot 
    Universal Replacements
    ==========-->
    <!--RC2_RawCarrots = [1.0, 1.1] RimCuisine 2 Core-->
    <!--RawCarrots = VGP Vegetable Garden-->

    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
            <li>dismarzero.vgp.vgpvegetablegarden</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>
                <ThingDef Name="DZ_RawCarrot" ParentName="DZ_FruitVeggieBase">
                    <defName>DZ_RawCarrot</defName>
                    <label>carrots</label>
                    <description>Carrots: Edible root grown in the soil.</description>
                    <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                    <graphicData />
                    <statBases>
                        <MarketValue>1.2</MarketValue>
                    </statBases>
                    <ingestible>
                        <preferability>RawTasty</preferability>
                        <tasteThought/>
                        <foodType>VegetableOrFruit</foodType>
                    </ingestible>
                    <comps>
                        <li Class="CompProperties_Rottable">
                            <daysToRotStart>30</daysToRotStart>
                            <rotDestroys>true</rotDestroys>
                        </li>
                    </comps>
                </ThingDef>
            </value>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--[1.0, 1.1] RimCuisine 2 Core-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>crustypeanut.rc2.core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawCarrot"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>RC2_Things/RC2_Veg/Carrots</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="RC2_CarrotBase"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawCarrot</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="RC2_RawCarrots"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="RC2_RawCarrots"]</xpath>
                    <value>
                        <thingDef>DZ_RawCarrot</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="RC2_RawCarrots"]</xpath>
                    <value>
                        <li>DZ_RawCarrot</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//RC2_RawCarrots</xpath>
                    <name>DZ_RawCarrot</name>
                </li>

            </operations>
        </match>
    </Operation>

    <!--VGP Vegetable Garden-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>dismarzero.vgp.vgpvegetablegarden</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_RawCarrot"]</xpath>
                    <operations>
                        <!--Use/replace graphics-->
                        <li Class="PatchOperationReplace">
                            <xpath>/ThingDef/graphicData</xpath>
                            <value>
                                <graphicData>
                                    <texPath>Things/Veg/Carrot</texPath>
                                </graphicData>
                            </value>
                        </li>
                    </operations>
                </li>

                <!--Replace harvestedThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="PlantCarrot"]/plant/harvestedThingDef</xpath>
                    <value>
                        <harvestedThingDef>DZ_RawCarrot</harvestedThingDef>
                    </value>
                </li>

                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="RawCarrots"]</xpath>
                </li>

                <!--Replace References-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//thingDef[.="RawCarrots"]</xpath>
                    <value>
                        <thingDef>DZ_RawCarrot</thingDef>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>//li[.="RawCarrots"]</xpath>
                    <value>
                        <li>DZ_RawCarrot</li>
                    </value>
                </li>
                <li Class="PatchOperationSetName">
                    <success>Always</success>
                    <xpath>//RawCarrots</xpath>
                    <name>DZ_RawCarrot</name>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>