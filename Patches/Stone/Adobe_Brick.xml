<Patch>

    <!--==========
    Adobe Brick {Simple Mining Extension, Ceramics}
    ==========-->

    <!--DUR Adobe Brick, with whitelist-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Yuno.SimpleOresTest</li>
            <li>n7huntsman.ceramics</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_AdobeBrick" ParentName="StoneBlocksBase">
                            <defName>DZ_AdobeBrick</defName>
                            <label>Adobe Brick</label>
                            <description>Adobe Brick: Organics combined with clay, hardened into building material.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <soundInteract>Stone_Drop</soundInteract>
                            <soundDrop>Stone_Drop</soundDrop>
                            <stackLimit>75</stackLimit>
                            <statBases>
                                <Mass>0.9</Mass>
                                <Beauty>0</Beauty>
                                <Flammability>0</Flammability>
                                <SharpDamageMultiplier>0.25</SharpDamageMultiplier>
                            </statBases>
                            <stuffProps>
                                <categories />
                                <color>(162,152,121)</color>
                                <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
                                <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
                                <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
                                <stuffAdjective>adobe</stuffAdjective>
                                <statFactors>
                                    <MarketValue>0.2</MarketValue>
                                    <Flammability>0</Flammability>
                                    <BedRestEffectiveness>0.9</BedRestEffectiveness>
                                    <MeleeWeapon_CooldownMultiplier>1.10</MeleeWeapon_CooldownMultiplier>
                                    <Beauty>0.3</Beauty>
                                    <MaxHitPoints>0.5</MaxHitPoints>
                                    <WorkToBuild>2</WorkToBuild>
                                    <WorkToMake>0.85</WorkToMake>
                                </statFactors>
                            </stuffProps>
                            <smeltable>false</smeltable>
                            <thingCategories>
                                <li>ResourcesRaw</li>
                            </thingCategories>
                            <tradeTags />
                            <comps />
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Simple Mining Extension-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Yuno.SimpleOresTest</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_AdobeBrick"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_AdobeBrick"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <color>(144,108,63)</color>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_AdobeBrick"]/graphicData</xpath>
                        <value>
                            <color>(144,108,63)</color>
                        </value>
                    </nomatch>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="BlocksAdobe"]</xpath>
                </li>
                <!--Add blank def-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef ParentName="DZ_AdobeBrick">
                            <defName>BlocksAdobe</defName>
                            <label>adobe brick</label>
                            <description>Removed from game. Contact Dr_Zhivago if found.</description>
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Ceramics-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>n7huntsman.ceramics</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <!--<success>Always</success>-->
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_AdobeBrick"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_AdobeBrick"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Things/Item/DriedMudBrick</texPath>
                                <graphicClass>Graphic_StackCount</graphicClass>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_AdobeBrick"]/graphicData</xpath>
                        <value>
                            <texPath>Things/Item/DriedMudBrick</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                        </value>
                    </nomatch>
                </li>
                <!--Replace StuffProps Categories-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_AdobeBrick"]/stuffProps/categories</xpath>
                    <value>
                        <categories Inherit="false">
                            <li>Masonry</li>
                            <li>Stony</li>
                        </categories>
                    </value>
                </li>
                <!--Replace drying resource-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Building_DryingRack"]/comps/li[@Class="Ceramics.CompProperties_Processing"]/productDef</xpath>
                    <value>
                        <productDef>DZ_AdobeBrick</productDef>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="N7_DriedMudbrick"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--
        Universal Adobe Brick Replacements
        -->
    <!--BlocksAdobe = Simple Mining Extension-->
    <!--N7_DriedMudbrick = Ceramics-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/TraderKindDef/stockGenerators/*//thingDef[text()="BlocksAdobe" or text()="N7_DriedMudbrick"]</xpath>
        <value>
            <thingDef>DZ_AdobeBrick</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>
        <xpath>/Defs/ThingDef/modExtensions/*//products/*[self::BlocksAdobe or self::N7_DriedMudbrick] 
            | /Defs/ThingDef/costList/*[self::BlocksAdobe or self::N7_DriedMudbrick] 
            | /Defs/RecipeDef/products/*[self::BlocksAdobe or self::N7_DriedMudbrick]
            | /Defs/TerrainDef/costList/*[self::BlocksAdobe or self::N7_DriedMudbrick]
        </xpath>
        <name>DZ_AdobeBrick</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/RecipeDef/ingredients/*//filter/thingDefs/li[text()="BlocksAdobe" or text()="N7_DriedMudbrick"] 
            | /Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="BlocksAdobe" or text()="N7_DriedMudbrick"] 
            | /Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="BlocksAdobe" or text()="N7_DriedMudbrick"]
        </xpath>
        <value>
            <li>DZ_AdobeBrick</li>
        </value>
    </Operation>

</Patch>