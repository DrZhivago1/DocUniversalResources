<Patch>

    <!--==========
    Peridot {Gems (Continued), Kura's Extra Gems}
    ==========-->

    <!--DUR Peridot, with whitelist-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.Gems</li>
            <li>Kura.ExtraGems</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_Peridot" ParentName="DZ_GemstoneBase">
                            <defName>DZ_Peridot</defName>
                            <label>Peridot</label>
                            <description>Peridot: A translucent and green variety of olivine.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <soundInteract>ChunkRock_Drop</soundInteract>
                            <soundDrop>ChunkRock_Drop</soundDrop>
                            <statBases>
                                <MarketValue>30</MarketValue>                                <!--Gold = 100(10x10 since small volume)-->
                                <Mass>0.15</Mass>                                <!--Steel = 0.5-->
                                <RoyalFavorValue>0.03</RoyalFavorValue>                                <!--Gold = 0.015-->
                                <Flammability>0</Flammability>
                                <StuffPower_Armor_Sharp>0.9</StuffPower_Armor_Sharp>
                                <StuffPower_Armor_Blunt>0.45</StuffPower_Armor_Blunt>
                                <StuffPower_Armor_Heat>0.54</StuffPower_Armor_Heat>
                                <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
                                <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
                                <SharpDamageMultiplier>0.75</SharpDamageMultiplier>
                                <BluntDamageMultiplier>1.25</BluntDamageMultiplier>
                            </statBases>
                            <useHitPoints>false</useHitPoints>
                            <healthAffectsPrice>false</healthAffectsPrice>
                            <stuffProps>
                                <categories>
                                    <li>Stony</li>
                                </categories>
                                <commonality>0.03</commonality>                                <!--Gold = 0.02-->
                                <color />
                                <constructEffect>ConstructMetal</constructEffect>
                                <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
                                <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
                                <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
                                <statOffsets>
                                    <Beauty>15</Beauty>                                    <!--Gold = 20-->
                                </statOffsets>
                                <statFactors>
                                    <Flammability>0</Flammability>
                                    <Beauty>2</Beauty>                                    <!--Gold = 4-->
                                    <MaxHitPoints>0.5</MaxHitPoints>
                                    <WorkToBuild>3</WorkToBuild>
                                    <WorkToMake>3</WorkToMake>
                                    <MeleeWeapon_CooldownMultiplier>1.25</MeleeWeapon_CooldownMultiplier>
                                </statFactors>
                            </stuffProps>
                            <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
                            <deepCommonality>0.25</deepCommonality>                            <!--Gold = 0.5-->
                            <deepCountPerPortion>5</deepCountPerPortion>
                            <deepLumpSizeRange>3~10</deepLumpSizeRange>
                            <burnableByRecipe>false</burnableByRecipe>
                            <smeltable>false</smeltable>
                            <thingCategories>
                                <li>ResourcesRaw</li>
                            </thingCategories>
                            <tradeTags />
                            <comps />
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--Gems (Continued)-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.Gems</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Peridot"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Peridot"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Things/Item/Resource/Peridot</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Peridot"]/graphicData</xpath>
                        <value>
                            <texPath>Things/Item/Resource/Peridot</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                        </value>
                    </nomatch>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Peridot"]/stuffProps/color</xpath>
                    <value>
                        <color>(176,255,146)</color>
                    </value>
                </li>
                <!--Use thingCategories-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Peridot"]/thingCategories</xpath>
                    <value>
                        <li>Gems</li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Peridot"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Kura's Extra Gems-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Kura.ExtraGems</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Peridot"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Peridot"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Peridot</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Peridot"]/graphicData</xpath>
                        <value>
                            <texPath>Peridot</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                        </value>
                    </nomatch>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Peridot"]/stuffProps/color</xpath>
                    <value>
                        <color>(160,190,60)</color>
                    </value>
                </li>
                <!--Use thingCategories-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Peridot"]/thingCategories</xpath>
                    <value>
                        <li>KGems</li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Peridot"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--Peridot = Gems (Continued), Kura's Extra Gems-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/TraderKindDef/stockGenerators/*//thingDef[text()="Peridot"]</xpath>
        <value>
            <thingDef>DZ_Peridot</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@ParentName="RockBase"]/building/mineableThing[text()="Peridot"]</xpath>
        <value>
            <mineableThing>DZ_Peridot</mineableThing>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>
        <xpath>/Defs/ThingDef/modExtensions/*//products/*[self::Peridot] 
            | /Defs/ThingDef/costList/*[self::Peridot] 
            | /Defs/RecipeDef/products/*[self::Peridot]
            | /Defs/TerrainDef/costList/*[self::Peridot]
        </xpath>
        <name>DZ_Peridot</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/RecipeDef/ingredients/*//filter/thingDefs/li[text()="Peridot"] 
            | /Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="Peridot"] 
            | /Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="Peridot"] 
            | /Defs/ThingDef/recipeMaker/defaultIngredientFilter/disallowedThingDefs/li[text()="Peridot"]
        </xpath>
        <value>
            <li>DZ_Peridot</li>
        </value>
    </Operation>

</Patch>