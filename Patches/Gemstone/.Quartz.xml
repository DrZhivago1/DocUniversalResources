<Patch>

    <!--==========
    Quartz {Gems (Continued), Project RimFactory - Materials, Kura's Extra Gems, Gemstones}
    ==========-->

    <Operation Class="PatchOperation_DZ.FindModByID">
        <mods>
            <li>Mlie.Gems</li>
            <li>PRF.Materials</li>
            <li>Kura.ExtraGems</li>
            <li>zylle.Gemstones</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_Quartz" ParentName="DZ_GemstoneBase">
                            <defName>DZ_Quartz</defName>
                            <label>Quartz</label>
                            <description>Quartz: A transparent and colorless variety of quartz.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <soundInteract>ChunkRock_Drop</soundInteract>
                            <soundDrop>ChunkRock_Drop</soundDrop>
                            <statBases>
                                <MarketValue>15</MarketValue>                                <!--Gold = 100(10x10 since small volume)-->
                                <Mass>0.15</Mass>                                <!--Steel = 0.5-->
                                <RoyalFavorValue>0.025</RoyalFavorValue>                                <!--Gold = 0.015-->
                                <Flammability>0</Flammability>
                                <StuffPower_Armor_Sharp>0.9</StuffPower_Armor_Sharp>
                                <StuffPower_Armor_Blunt>0.45</StuffPower_Armor_Blunt>
                                <StuffPower_Armor_Heat>0.54</StuffPower_Armor_Heat>
                                <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
                                <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
                                <SharpDamageMultiplier>0.75</SharpDamageMultiplier>
                                <BluntDamageMultiplier>1.25</BluntDamageMultiplier>
                            </statBases>
                            <useHitPoints>false</useHitPoints>
                            <healthAffectsPrice>false</healthAffectsPrice>
                            <stuffProps>
                                <categories>
                                    <li>Stony</li>
                                </categories>
                                <commonality>0.05</commonality>                                <!--Gold = 0.02-->
                                <color />
                                <constructEffect>ConstructMetal</constructEffect>
                                <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
                                <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
                                <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
                                <statOffsets>
                                    <Beauty>10</Beauty>                                    <!--Gold = 20-->
                                </statOffsets>
                                <statFactors>
                                    <Flammability>0</Flammability>
                                    <Beauty>1.5</Beauty>                                    <!--Gold = 4-->
                                    <MaxHitPoints>0.5</MaxHitPoints>
                                    <WorkToBuild>3</WorkToBuild>
                                    <WorkToMake>3</WorkToMake>
                                    <MeleeWeapon_CooldownMultiplier>1.25</MeleeWeapon_CooldownMultiplier>
                                </statFactors>
                            </stuffProps>
                            <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
                            <deepCommonality>0.25</deepCommonality>                            <!--Gold = 0.5-->
                            <deepCountPerPortion>5</deepCountPerPortion>
                            <deepLumpSizeRange>3~10</deepLumpSizeRange>
                            <burnableByRecipe>false</burnableByRecipe>
                            <smeltable>false</smeltable>
                            <tradeTags />
                            <comps />
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--Gems (Continued)-->
    <Operation Class="PatchOperation_DZ.FindModByID">
        <mods>
            <li>Mlie.Gems</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Quartz"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Item/Resource/Quartz</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Quartz"]/stuffProps/color</xpath>
                    <value>
                        <color>(255,219,208)</color>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Quartz"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Project RimFactory - Materials-->
    <Operation Class="PatchOperation_DZ.FindModByID">
        <mods>
            <li>PRF.Materials</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Quartz"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Resources/PRF_CrystalOre</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Quartz"]/stuffProps/color</xpath>
                    <value>
                        <color>(175,238,238)</color>
                    </value>
                </li>
                <!--Add stuffProps categories-->
                <li Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Quartz"]/stuffProps/categories</xpath>
                    <value>
                        <li>PRF_Glassy</li>
                    </value>
                </li>
                <!--Add comps-->
                <li Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Quartz"]/comps</xpath>
                    <value>
                        <li Class="CompProperties_Glower">
                            <glowRadius>5</glowRadius>
                            <glowColor>(175,198,233,86)</glowColor>
                        </li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="PRF_quartz"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Kura's Extra Gems-->
    <Operation Class="PatchOperation_DZ.FindModByID">
        <mods>
            <li>Kura.ExtraGems</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Quartz"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Kura/Things/Item/Resource/KGem</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                            <color>(240,240,240)</color>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Quartz"]/stuffProps/color</xpath>
                    <value>
                        <color>(240,240,240)</color>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="KQuartz"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Gemstones-->
    <Operation Class="PatchOperation_DZ.FindModByID">
        <mods>
            <li>zylle.Gemstones</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Quartz"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Item/Resource/Gemstone</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                            <color>(231, 212, 212)</color>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Quartz"]/stuffProps/color</xpath>
                    <value>
                        <color>(231, 212, 212)</color>
                    </value>
                </li>
                <!--Add TradeTags-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Quartz"]/tradeTags</xpath>
                    <value>
                        <li>Z_Gemstones_SemiPrecious</li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Z_Quartz"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--Quartz = Gems (Continued)-->
    <!--Z_Quartz = Gemstones-->
    <!--PRF_quartz = Project RimFactory - Materials-->
    <!--KQuartz = Kura's Extra Gems-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/*//thingDef[text()="Quartz" or text()="Z_Quartz" or text()="PRF_quartz" or text()="KQuartz"]</xpath>
        <value>
            <thingDef>DZ_Quartz</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>
        <xpath>/Defs//*[self::Quartz or self::Z_Quartz or self::PRF_quartz or self::KQuartz]</xpath>
        <name>DZ_Quartz</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/*//li[text()="Quartz" or text()="Z_Quartz" or text()="PRF_quartz" or text()="KQuartz"]</xpath>
        <value>
            <li>DZ_Quartz</li>
        </value>
    </Operation>

</Patch>