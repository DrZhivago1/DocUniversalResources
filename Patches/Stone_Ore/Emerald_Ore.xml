<Patch>

    <!--==========
    Emerald Ore {Gems (Continued), Kura's Extra Gems}
    ==========-->

    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.Gems</li>
            <li>Kura.ExtraGems</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_EmeraldOre" ParentName="DZ_StoneOreBase">
                            <defName>DZ_EmeraldOre</defName>
                            <label>Emerald ore</label>
                            <description>Rock containing bits of emerald.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <statBases>
                                <MaxHitPoints>2500</MaxHitPoints>
                            </statBases>
                            <building>
                                <isResourceRock>true</isResourceRock>
                                <mineableThing>DZ_Emerald</mineableThing>
                                <mineableYield>15</mineableYield>
                                <mineableScatterCommonality>0.05</mineableScatterCommonality>
                                <mineableScatterLumpSizeRange>5~8</mineableScatterLumpSizeRange>
                            </building>
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--Gems (Continued)-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.Gems</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_EmeraldOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(114,114,114)</color>
                            <colorTwo>(54,241,205)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="MineableEmerald"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Kura's Extra Gems-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Kura.ExtraGems</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_EmeraldOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(114,114,114)</color>
                            <colorTwo>(43,135,26)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="MineableEmerald"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--MineableEmerald = Gems (Continued), Kura's Extra Gems-->

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/GenStepDef/genStep/mineables/li[text()="MineableEmerald"]</xpath>
        <value>
            <li>DZ_EmeraldOre</li>
        </value>
    </Operation>

</Patch>