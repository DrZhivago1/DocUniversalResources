                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="CaS_MineableCopper"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

