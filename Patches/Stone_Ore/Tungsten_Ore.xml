        <mods>
            <li>Argon.VMEu</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperation.Context">
                    <xpath>/Defs/ThingDef[@Name="DZ_TungstenOre"]</xpath>
                    <operations>
