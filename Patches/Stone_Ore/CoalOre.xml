<Patch>

    <!--==========
    Coal Ore {[WD] Simple Coal, Clockwork And Steam, Coal Expanded, Expanded Materials - Metals}
    ==========-->

    <!--DUR Coal Ore, with whitelist-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Wemd.SimpleCoal</li>
            <li>chance2000w.clockworkandsteam</li>
            <li>neceros.coalexpanded</li>
            <li>Argon.VMEu</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_CoalOre" ParentName="DZ_StoneOreBase">
                            <defName>DZ_CoalOre</defName>
                            <label>Coal ore</label>
                            <description>Rock containing bits of coal.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <statBases>
                                <MaxHitPoints>1000</MaxHitPoints>
                            </statBases>
                            <building>
                                <isResourceRock>true</isResourceRock>
                                <mineableThing>DZ_Coal</mineableThing>
                                <mineableYield>50</mineableYield>
                                <mineableScatterCommonality>1.5</mineableScatterCommonality>
                                <mineableScatterLumpSizeRange>12~25</mineableScatterLumpSizeRange>
                            </building>
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--[WD] Simple Coal-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Wemd.SimpleCoal</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_CoalOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(30,30,30)</color>
                            <colorTwo>(88,88,88)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="WDMineableCoal"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Clockwork And Steam-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>chance2000w.clockworkandsteam</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_CoalOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(0,0,0)</color>
                            <colorTwo>(10,10,10)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="CaS_MineableCoal"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Coal Expanded-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>neceros.coalexpanded</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_CoalOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(114,114,114)</color>
                            <colorTwo>(30,30,30)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="MineableCoal"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Expanded Materials - Metals-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Argon.VMEu</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_CoalOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <colorTwo>(31,31,31)</colorTwo>
                            <color>(128,128,128)</color>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="VMEu_MineableCoal"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--WDMineableCoal = [WD] Simple Coal-->
    <!--CaS_MineableCoal = Clockwork And Steam-->
    <!--VMEu_MineableCoal = Expanded Materials - Metals-->
    <!--MineableCoal = Coal Expanded-->

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/GenStepDef/genStep/mineables/li[text()="WDMineableCoal" or text()="CaS_MineableCoal" or text()="MineableCoal" or text()="VMEu_MineableCoal"]</xpath>
        <value>
            <li>DZ_CoalOre</li>
        </value>
    </Operation>

</Patch>