<Patch>

    <!--==========
    Sapphire Ore {Gems (Continued), Clockwork And Steam, Kura's Extra Gems, Jewelry}
    ==========-->

    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>Mlie.Gems</li>
            <li>chance2000w.clockworkandsteam</li>
            <li>Kura.ExtraGems</li>
            <li>kikohi.jewelry</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_SapphireOre" ParentName="DZ_StoneOreBase">
                            <defName>DZ_SapphireOre</defName>
                            <label>Sapphire ore</label>
                            <description>Rock containing bits of sapphire.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <statBases>
                                <MaxHitPoints>2500</MaxHitPoints>
                            </statBases>
                            <building>
                                <isResourceRock>true</isResourceRock>
                                <mineableThing>DZ_Sapphire</mineableThing>
                                <mineableYield>15</mineableYield>
                                <mineableScatterCommonality>0.05</mineableScatterCommonality>
                                <mineableScatterLumpSizeRange>5~8</mineableScatterLumpSizeRange>
                            </building>
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--Gems (Continued)-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>Mlie.Gems</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_SapphireOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(114,114,114)</color>
                            <colorTwo>(37,73,255)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="MineableSapphire"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Clockwork And Steam-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>chance2000w.clockworkandsteam</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_SapphireOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(0,0,50)</color>
                            <colorTwo>(0,0,90)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="CaS_MineableSapphire"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Kura's Extra Gems-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>Kura.ExtraGems</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_SapphireOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(114,114,114)</color>
                            <colorTwo>(37,85,170)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="KMineableSapphire"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Jewelry-->
    <Operation Class="PatchOperation.FindModByID">
        <mods>
            <li>kikohi.jewelry</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_SapphireOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(107, 97, 97)</color>
                            <colorTwo>(68,68,136)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="MineableSapphire"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--MineableSapphire = Gems (Continued), Jewelry-->
    <!--CaS_MineableSapphire = Clockwork And Steam-->
    <!--KMineableSapphire = Kura's Extra Gems-->

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/GenStepDef/genStep/mineables/li[text()="MineableSapphire" or text()="CaS_MineableSapphire" or text()="KMineableSapphire"]</xpath>
        <value>
            <li>DZ_SapphireOre</li>
        </value>
    </Operation>

</Patch>