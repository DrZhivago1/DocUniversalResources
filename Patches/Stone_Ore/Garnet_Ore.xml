<Patch>

    <!--==========
    Garnet Ore {Gems (Continued), Gemstones}
    ==========-->

    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Kura.ExtraGems</li>
            <li>zylle.Gemstones</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_GarnetOre" ParentName="DZ_StoneOreBase">
                            <defName>DZ_GarnetOre</defName>
                            <label>Garnet ore</label>
                            <description>Rock containing bits of garnet.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <statBases>
                                <MaxHitPoints>1500</MaxHitPoints>
                            </statBases>
                            <building>
                                <isResourceRock>true</isResourceRock>
                                <mineableThing>DZ_Garnet</mineableThing>
                                <mineableYield>25</mineableYield>
                                <mineableScatterCommonality>0.05</mineableScatterCommonality>
                                <mineableScatterLumpSizeRange>5~8</mineableScatterLumpSizeRange>
                            </building>
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--Kura's Extra Gems-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Kura.ExtraGems</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_GarnetOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(114,114,114)</color>
                            <colorTwo>(98,25,18)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="KMineableGarnet"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Gemstones-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>zylle.Gemstones</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_GarnetOre"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <shaderType>CutoutComplex</shaderType>
                            <color>(62,55,58)</color>
                            <colorTwo>(56,7,28)</colorTwo>
                        </graphicData>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Z_MineableGarnet"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--KMineableGarnet = Kura's Extra Gems-->
    <!--Z_MineableGarnet = Gemstones-->

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/GenStepDef/genStep/mineables/li[text()="KMineableGarnet" or text()="Z_MineableGarnet"]</xpath>
        <value>
            <li>DZ_GarnetOre</li>
        </value>
    </Operation>

</Patch>