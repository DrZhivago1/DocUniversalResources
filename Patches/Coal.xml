    <!--
        Universal Coal Replacements
        -->
    <!--WDCoal = [WD] Simple Coal-->
    <!--VMEu_Coal = Expanded Materials - Metals-->
    <!--MedTimes_Resource_Coal = Medieval Times Unofficial Update-->
    <!--Coal = Coal Expanded-->
    <!--CaS_Coal = Clockwork And Steam-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/TraderKindDef/stockGenerators/*//thingDef[text()="WDCoal" or text()="VMEu_Coal" or text()="MedTimes_Resource_Coal" or text()="Coal" or text()="CaS_Coal"]</xpath>
        <value>
            <thingDef>DZ_Coal</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@ParentName="RockBase"]/building/mineableThing[text()="WDCoal" or text()="VMEu_Coal" or text()="MedTimes_Resource_Coal" or text()="Coal" or text()="CaS_Coal"]</xpath>
        <value>
            <mineableThing>DZ_Coal</mineableThing>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>        <!--MANDATORY due to vanilla bug-->
        <xpath>/Defs/ThingDef/modExtensions/*//products/*[self::WDCoal or self::VMEu_Coal or self::MedTimes_Resource_Coal or self::Coal or self::CaS_Coal] 
            | /Defs/ThingDef/costList/*[self::WDCoal or self::VMEu_Coal or self::MedTimes_Resource_Coal or self::Coal or self::CaS_Coal]
            | /Defs/RecipeDef/products/*[self::WDCoal or self::VMEu_Coal or self::MedTimes_Resource_Coal or self::Coal or self::CaS_Coal]
            | /Defs/TerrainDef/costList/*[self::WDCoal or self::VMEu_Coal or self::MedTimes_Resource_Coal or self::Coal or self::CaS_Coal]
        </xpath>
        <name>DZ_Coal</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li[text()="WDCoal" or text()="VMEu_Coal" or text()="MedTimes_Resource_Coal" or text()="Coal" or text()="CaS_Coal"] 
            | /Defs/RecipeDef/ingredients/*//filter/thingDefs/li[text()="WDCoal" or text()="VMEu_Coal" or text()="MedTimes_Resource_Coal" or text()="Coal" or text()="CaS_Coal"]
            | /Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="WDCoal" or text()="VMEu_Coal" or text()="MedTimes_Resource_Coal" or text()="Coal" or text()="CaS_Coal"]
            | /Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="WDCoal" or text()="VMEu_Coal" or text()="MedTimes_Resource_Coal" or text()="Coal" or text()="CaS_Coal"]
        </xpath>
        <value>
            <li>DZ_Coal</li>
        </value>
    </Operation>

</Patch>