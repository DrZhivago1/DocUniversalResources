<Patch>

    <!--==========
    Coal {Medieval Times Unofficial Update, Clockwork And Steam, [WD] Simple Coal, Coal Expanded, Expanded Materials - Metals}
    ==========-->

    <!--DUR Coal, with whitelist-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>vindar.medievaltimes</li>
            <li>chance2000w.clockworkandsteam</li>
            <li>Wemd.SimpleCoal</li>
            <li>neceros.coalexpanded</li>
            <!--<li>spdskatr.projectrimfactory</li>-->
            <li>Argon.VMEu</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_Coal" ParentName="ResourceBase">
                            <defName>DZ_Coal</defName>
                            <label>Coal</label>
                            <description>Coal: A carbon based sedimentary rock that can be burned for fuel.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <soundInteract>ChunkRock_Drop</soundInteract>
                            <soundDrop>ChunkRock_Drop</soundDrop>
                            <stackLimit>25</stackLimit>
                            <statBases>
                                <MarketValue>1.0</MarketValue>
                                <MaxHitPoints>100</MaxHitPoints>
                                <Flammability>1.0</Flammability>
                                <Mass>0.5</Mass>
                            </statBases>
                            <thingCategories>
                                <li>ResourcesRaw</li>
                            </thingCategories>
                            <deepCommonality>1.25</deepCommonality>
                            <deepCountPerPortion>25</deepCountPerPortion>
                            <deepLumpSizeRange>15~25</deepLumpSizeRange>
                            <tradeTags />
                            <stuffProps />
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Medieval Times Unofficial Update-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>vindar.medievaltimes</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics to ThingDef-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Coal"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Coal"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Things/Item/Resource/Coal/MedTimes_Coal</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                                <drawSize>(0.8,0.8)</drawSize>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Coal"]/graphicData</xpath>
                        <value>
                            <texPath>Things/Item/Resource/Coal/MedTimes_Coal</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <drawSize>(0.8,0.8)</drawSize>
                        </value>
                    </nomatch>
                </li>
                <!--Use stuffProps -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Coal"]/stuffProps</xpath>
                    <value>
                        <stuffProps>
                            <stuffAdjective>Coal</stuffAdjective>
                            <appearance>Bricks</appearance>
                            <categories>
                                <li>MedTimes_Coal</li>
                            </categories>
                            <commonality>0.01</commonality>
                            <color>(30,30,30)</color>
                            <constructEffect>ConstructMetal</constructEffect>
                            <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
                            <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
                            <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
                        </stuffProps>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="MedTimes_Resource_Coal"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

