<Patch>

    <!--==========
    Zinc {Clockwork And Steam, Cupro's Alloys (Continued)}
    ==========-->

    <!--DUR Zinc, with whitelist-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>chance2000w.clockworkandsteam</li>
            <li>Mlie.CuprosAlloys</li>
        </packageIds>
        <match Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>
                <ThingDef Name="DZ_Zinc" ParentName="DZ_MetalBase">
                    <defName>DZ_Zinc</defName>
                    <label>Zinc</label>
                    <description>Zinc: A hard and brittle metal often alloyed to improve its durability.</description>
                    <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                    <graphicData />
                    <soundInteract>Metal_Drop</soundInteract>
                    <soundDrop>Metal_Drop</soundDrop>
                    <statBases>
                        <MarketValue>2</MarketValue>                        <!--Gold = 100(10x10 since small volume)-->
                        <Mass>0.3</Mass>                        <!--Steel = 0.5-->
                        <StuffPower_Armor_Sharp>0.3</StuffPower_Armor_Sharp>
                        <StuffPower_Armor_Blunt>0.2</StuffPower_Armor_Blunt>
                        <StuffPower_Armor_Heat>0.2</StuffPower_Armor_Heat>
                        <StuffPower_Insulation_Cold>0</StuffPower_Insulation_Cold>
                        <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
                        <SharpDamageMultiplier>0.6</SharpDamageMultiplier>
                        <BluntDamageMultiplier>0.6</BluntDamageMultiplier>
                    </statBases>
                    <useHitPoints>false</useHitPoints>
                    <healthAffectsPrice>false</healthAffectsPrice>
                    <stuffProps>
                        <categories>
                            <li>Metallic</li>
                        </categories>
                        <commonality>0.25</commonality>                        <!--Gold = 0.02, Steel = 1-->
                        <color />
                        <constructEffect>ConstructMetal</constructEffect>
                        <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
                        <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
                        <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
                        <statOffsets>
                            <Beauty>0</Beauty>
                        </statOffsets>
                        <statFactors>
                            <WorkToMake>0.75</WorkToMake>
                            <WorkToBuild>0.75</WorkToBuild>
                            <MaxHitPoints>0.5</MaxHitPoints>
                            <Beauty>0</Beauty>
                            <Flammability>0.2</Flammability>                            <!--Steel = 0.4-->
                        </statFactors>
                    </stuffProps>
                    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
                    <burnableByRecipe>false</burnableByRecipe>
                    <smeltable>true</smeltable>
                    <thingCategories>
                        <li>ResourcesRaw</li>
                    </thingCategories>
                    <deepCommonality>1</deepCommonality>                    <!--Gold = 0.5, Steel = 4-->
                    <deepCountPerPortion>30</deepCountPerPortion>                    <!--Steel = 45-->
                    <deepLumpSizeRange>10~20</deepLumpSizeRange>                    <!--Steel = 20~30-->
                    <tradeTags />
                    <comps />
                </ThingDef>
            </value>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->


    <!--Clockwork And Steam-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>chance2000w.clockworkandsteam</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Copper"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Item/Resource/CaS_Ingot</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                            <color>(250,250,250)</color>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Copper"]/stuffProps/color</xpath>
                    <value>
                        <color>(250,250,250)</color>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="CaS_Zinc"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Cupro's Alloys (Continued)-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.CuprosAlloys</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Zinc"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Cupro/Item/Material/Zinc</texPath>
                            <graphicClass>Graphic_Random</graphicClass>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Zinc"]/stuffProps/color</xpath>
                    <value>
                        <color>(165,182,199)</color>
                    </value>
                </li>
                <!--Use thingCategories-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Zinc"]/thingCategories</xpath>
                    <value>
                        <li>CAL_Metals</li>
                    </value>
                </li>
                <!--Use tradeTags-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Aluminum"]/tradeTags</xpath>
                    <value>
                        <li>Exotic</li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="CAL_Zinc"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--CAL_Zinc = Cupro's Alloys (Continued)-->
    <!--CaS_Zinc = Clockwork And Steam-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/TraderKindDef/stockGenerators/*//thingDef[text()="CAL_Zinc" or text()="CaS_Zinc"]
            | /Defs/ScenarioDef/scenario/parts/*//thingDef[text()="CAL_Zinc" or text()="CaS_Zinc"]</xpath>
        <value>
            <thingDef>DZ_Zinc</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@ParentName="RockBase" or @ParentName="Ind_RockBase"]/building/mineableThing[text()="CAL_Zinc" or text()="CaS_Zinc"]</xpath>
        <value>
            <mineableThing>DZ_Zinc</mineableThing>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>
        <xpath>/Defs/ThingDef/modExtensions/*//products/*[self::CAL_Zinc or self::CaS_Zinc]
            | /Defs/ThingDef/costList/*[self::CAL_Zinc or self::CaS_Zinc]
            | /Defs/RecipeDef/products/*[self::CAL_Zinc or self::CaS_Zinc]
            | /Defs/TerrainDef/costList/*[self::CAL_Zinc or self::CaS_Zinc]
        </xpath>
        <name>DZ_Zinc</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/RecipeDef/ingredients/*//filter/thingDefs/li[text()="CAL_Zinc" or text()="CaS_Zinc"]
            | /Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="CAL_Zinc" or text()="CaS_Zinc"]
            | /Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="CAL_Zinc" or text()="CaS_Zinc"]
            | /Defs/ThingDef/recipeMaker/defaultIngredientFilter/disallowedThingDefs/li[text()="CAL_Zinc" or text()="CaS_Zinc"]
        </xpath>
        <value>
            <li>DZ_Zinc</li>
        </value>
    </Operation>

</Patch>