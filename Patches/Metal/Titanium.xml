<Patch>

    <!--==========
    Titanium {Metals+, Expanded Materials - Metals}
    ==========-->

    <!--DUR Titanium, with whitelist-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Kyrrisayo.MetalsPlus</li>
            <li>Argon.VMEu</li>
        </packageIds>
        <match Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>
                <ThingDef Name="DZ_Titanium" ParentName="DZ_MetalBase">
                    <defName>DZ_Titanium</defName>
                    <label>Titanium</label>
                    <description>Titanium: A silver colored, low density, and high strength metal.</description>
                    <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                    <graphicData />
                    <soundInteract>Metal_Drop</soundInteract>
                    <soundDrop>Metal_Drop</soundDrop>
                    <statBases>
                        <MarketValue>6.9</MarketValue>                        <!--Gold = 100(10x10 since small volume)-->
                        <Mass>0.4</Mass>                        <!--Steel = 0.5-->
                        <StuffPower_Armor_Sharp>1.15</StuffPower_Armor_Sharp>
                        <StuffPower_Armor_Blunt>0.6</StuffPower_Armor_Blunt>
                        <StuffPower_Armor_Heat>0.8</StuffPower_Armor_Heat>
                        <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
                        <StuffPower_Insulation_Heat>1</StuffPower_Insulation_Heat>
                        <SharpDamageMultiplier>1.1</SharpDamageMultiplier>
                        <BluntDamageMultiplier>1.2</BluntDamageMultiplier>
                    </statBases>
                    <useHitPoints>false</useHitPoints>
                    <healthAffectsPrice>false</healthAffectsPrice>
                    <stuffProps>
                        <categories>
                            <li>Metallic</li>
                        </categories>
                        <commonality>0.25</commonality>                        <!--Gold = 0.02, Steel = 1-->
                        <color />
                        <constructEffect>ConstructMetal</constructEffect>
                        <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
                        <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
                        <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
                        <statOffsets>
                            <Beauty>0</Beauty>
                        </statOffsets>
                        <statFactors>
                            <WorkToMake>2.2</WorkToMake>
                            <WorkToBuild>2.2</WorkToBuild>
                            <MaxHitPoints>2.5</MaxHitPoints>
                            <Beauty>1</Beauty>
                            <Flammability>0</Flammability>                            <!--Steel = 0.4-->
                        </statFactors>
                    </stuffProps>
                    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
                    <burnableByRecipe>false</burnableByRecipe>
                    <smeltable>true</smeltable>
                    <thingCategories>
                        <li>ResourcesRaw</li>
                    </thingCategories>
                    <deepCommonality>1.5</deepCommonality>                    <!--Gold = 0.5, Steel = 4-->
                    <deepCountPerPortion>15</deepCountPerPortion>                    <!--Steel = 45-->
                    <deepLumpSizeRange>6~12</deepLumpSizeRange>                    <!--Steel = 20~30-->
                    <tradeTags />
                    <comps />
                </ThingDef>
            </value>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--Metals+-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Kyrrisayo.MetalsPlus</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Titanium"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Item/Resource/Titanium</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Titanium"]/stuffProps/color</xpath>
                    <value>
                        <color>(223,230,236)</color>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Titanium"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Expanded Materials - Metals-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Argon.VMEu</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Titanium"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Item/Resource/VMEu_Titanium</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Titanium"]/stuffProps/color</xpath>
                    <value>
                        <color>(58,58,58)</color>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="VMEu_Titanium"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--Titanium = Metals+-->
    <!--VMEu_Titanium = Expanded Materials - Metals-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/TraderKindDef/stockGenerators/*//thingDef[text()="Titanium" or text()="VMEu_Titanium"]
            | /Defs/ScenarioDef/scenario/parts/*//thingDef[text()="Titanium" or text()="VMEu_Titanium"]</xpath>
        <value>
            <thingDef>DZ_Titanium</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@ParentName="RockBase" or @ParentName="Ind_RockBase"]/building/mineableThing[text()="Titanium" or text()="VMEu_Titanium"]</xpath>
        <value>
            <mineableThing>DZ_Titanium</mineableThing>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>
        <xpath>/Defs/ThingDef/modExtensions/*//products/*[self::Titanium or self::VMEu_Titanium]
            | /Defs/ThingDef/costList/*[self::Titanium or self::VMEu_Titanium]
            | /Defs/RecipeDef/products/*[self::Titanium or self::VMEu_Titanium]
            | /Defs/TerrainDef/costList/*[self::Titanium or self::VMEu_Titanium]
        </xpath>
        <name>DZ_Titanium</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/RecipeDef/ingredients/*//filter/thingDefs/li[text()="Titanium" or text()="VMEu_Titanium"]
            | /Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="Titanium" or text()="VMEu_Titanium"]
            | /Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="Titanium" or text()="VMEu_Titanium"]
            | /Defs/ThingDef/recipeMaker/defaultIngredientFilter/disallowedThingDefs/li[text()="Titanium" or text()="VMEu_Titanium"]
        </xpath>
        <value>
            <li>DZ_Titanium</li>
        </value>
    </Operation>

</Patch>