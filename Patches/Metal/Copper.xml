    <!--Expanded Materials - Metals-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Argon.VMEu</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Copper"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Item/Resource/VMEu_Copper</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Copper"]/stuffProps/color</xpath>
                    <value>
                        <color>(175, 73, 27)</color>
                    </value>
                </li>
                <!--Use thingCategories-->
                <li Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Copper"]/thingCategories</xpath>
                    <value>
                        <li>VMEu_SpecialMetals</li>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Copper"]/statBases/Mass</xpath>
                    <value>
                        <Mass>0.008</Mass>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Copper"]/soundInteract</xpath>
                    <value>
                        <soundInteract>Silver_Drop</soundInteract>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Copper"]/soundDrop</xpath>
                    <value>
                        <soundDrop>Silver_Drop</soundDrop>
                    </value>
                </li>
                <!--Add stackLimit-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Copper"]/stackLimit</xpath>
                    <value>
                        <stackLimit>500</stackLimit>
                    </value>
                </li>
                <!--Add smallVolume-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Copper"]/smallVolume</xpath>
                    <value>
                        <smallVolume>true</smallVolume>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="VMEu_Copper"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--Copper = Metals+-->
    <!--CaS_Copper = Clockwork And Steam-->
    <!--Ind_Copper = Industrialisation-->
    <!--CAL_Copper = Cupro's Alloys (Continued)-->
    <!--PRF_Copper = Project RimFactory - Materials-->
    <!--VMEu_Copper = Expanded Materials - Metals-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/TraderKindDef/stockGenerators/*//thingDef[text()="Copper" or text()="CaS_Copper" or text()="Ind_Copper" or text()="CAL_Copper" or text()="PRF_Copper" or text()="VMEu_Copper"]
            | /Defs/ScenarioDef/scenario/parts/*//thingDef[text()="Copper" or text()="CaS_Copper" or text()="Ind_Copper" or text()="CAL_Copper" or text()="PRF_Copper" or text()="VMEu_Copper"]</xpath>
        <value>
            <thingDef>DZ_Copper</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>
        <xpath>/Defs/ThingDef/modExtensions/*//products/*[self::Copper or self::CaS_Copper or self::Ind_Copper or self::CAL_Copper or self::PRF_Copper or self::VMEu_Copper]
            | /Defs/ThingDef/costList/*[self::Copper or self::CaS_Copper or self::Ind_Copper or self::CAL_Copper or self::PRF_Copper or self::VMEu_Copper]
            | /Defs/RecipeDef/products/*[self::Copper or self::CaS_Copper or self::Ind_Copper or self::CAL_Copper or self::PRF_Copper or self::VMEu_Copper]
            | /Defs/TerrainDef/costList/*[self::Copper or self::CaS_Copper or self::Ind_Copper or self::CAL_Copper or self::PRF_Copper or self::VMEu_Copper]
        </xpath>
        <name>DZ_Copper</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/RecipeDef/ingredients/*//filter/thingDefs/li[text()="Copper" or text()="CaS_Copper" or text()="Ind_Copper" or text()="CAL_Copper" or text()="PRF_Copper" or text()="VMEu_Copper"]
            | /Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="Copper" or text()="CaS_Copper" or text()="Ind_Copper" or text()="CAL_Copper" or text()="PRF_Copper" or text()="VMEu_Copper"]
            | /Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="Copper" or text()="CaS_Copper" or text()="Ind_Copper" or text()="CAL_Copper" or text()="PRF_Copper" or text()="VMEu_Copper"]
            | /Defs/ThingDef/recipeMaker/defaultIngredientFilter/disallowedThingDefs/li[text()="Copper" or text()="CaS_Copper" or text()="Ind_Copper" or text()="CAL_Copper" or text()="PRF_Copper" or text()="VMEu_Copper"]
        </xpath>
        <value>
            <li>DZ_Copper</li>
        </value>
    </Operation>

</Patch>