    <!--==========
    Universal Replacements
    ==========-->
    <!--WDCoal = [WD] Simple Coal-->
    <!--VMEu_Coal = Expanded Materials - Metals-->
    <!--MedTimes_Resource_Coal = Medieval Times Unofficial Update-->
    <!--Coal = Coal Expanded-->
    <!--CaS_Coal = Clockwork And Steam-->
    <!--PRF_Coal = Project RimFactory - Materials-->
    <!--RH_TET_Coal = Rimhammer - The End Times-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/*//thingDef[text()="WDCoal" or text()="VMEu_Coal" or text()="MedTimes_Resource_Coal" or text()="Coal" or text()="CaS_Coal" or text()="CoalOre" or text()="PRF_Coal" or text()="RH_TET_Coal"]</xpath>
        <value>
            <thingDef>DZ_Coal</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>        <!--MANDATORY due to vanilla bug-->
        <xpath>/Defs//*[self::WDCoal or self::VMEu_Coal or self::MedTimes_Resource_Coal or self::Coal or self::CaS_Coal or self::CoalOre or self::PRF_Coal or self::RH_TET_Coal]
        </xpath>
        <name>DZ_Coal</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/*//li[text()="WDCoal" or text()="VMEu_Coal" or text()="MedTimes_Resource_Coal" or text()="Coal" or text()="CaS_Coal" or text()="CoalOre" or text()="PRF_Coal" or text()="RH_TET_Coal"]
        </xpath>
        <value>
            <li>DZ_Coal</li>
        </value>
    </Operation>

</Patch>