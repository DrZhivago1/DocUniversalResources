<Patch>

    <!--==========
    Adobe {Simple Mining Extension, Ceramics}
    ==========-->

    <!--DUR Adobe, with whitelist-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Yuno.SimpleOresTest</li>
            <li>n7huntsman.ceramics</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_Adobe" ParentName="DZ_EarthyBase">
                            <defName>DZ_Adobe</defName>
                            <label>Adobe</label>
                            <description>Adobe: Organics combined with clay to produce moldable material.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <soundInteract>Stone_Drop</soundInteract>
                            <soundDrop>Stone_Drop</soundDrop>
                            <stackLimit>75</stackLimit>
                            <statBases>
                                <Mass>1.0</Mass>
                                <Beauty>-2</Beauty>
                                <Flammability>0.1</Flammability>
                            </statBases>
                            <tickerType />
                            <thingCategories>
                                <li>ResourcesRaw</li>
                            </thingCategories>
                            <tradeTags />
                            <comps />
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--Simple Mining Extension-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Yuno.SimpleOresTest</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Adobe"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Adobe"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>resources/AdobeRaw</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                                <color>(168,140,104)</color>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Adobe"]/graphicData</xpath>
                        <value>
                            <texPath>resources/AdobeRaw</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                            <color>(168,140,104)</color>
                        </value>
                    </nomatch>
                </li>
                <!--Use Ticker-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Adobe"]/tickerType</xpath>
                    <value>
                        <tickerType>Rare</tickerType>
                    </value>
                </li>
                <!--Allow Drying-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Adobe"]/comps</xpath>
                    <value>
                        <li Class="OreProcessing.CompProperties_Dryable">
                            <defDriesTo>DZ_AdobeBrick</defDriesTo>
                        </li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="AdobeRaw"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Ceramics-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>n7huntsman.ceramics</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Adobe"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Adobe"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Things/Item/RawMudBrick</texPath>
                                <graphicClass>Graphic_StackCount</graphicClass>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Adobe"]/graphicData</xpath>
                        <value>
                            <texPath>Things/Item/RawMudBrick</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                        </value>
                    </nomatch>
                </li>
                <!--Replace drying resource-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Building_DryingRack"]/comps/li[@Class="Ceramics.CompProperties_Processing"]/ingredientDef</xpath>
                    <value>
                        <ingredientDef>DZ_Adobe</ingredientDef>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="N7_RawMudbrick"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--AdobeRaw = Simple Mining Extension-->
    <!--N7_RawMudbrick = Ceramics-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/TraderKindDef/stockGenerators/*//thingDef[text()="AdobeRaw" or text()="N7_RawMudbrick"]</xpath>
        <value>
            <thingDef>DZ_Adobe</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>
        <xpath>/Defs/ThingDef/modExtensions/*//products/*[self::AdobeRaw or self::N7_RawMudbrick] 
            | /Defs/ThingDef/costList/*[self::AdobeRaw or self::N7_RawMudbrick] 
            | /Defs/RecipeDef/products/*[self::AdobeRaw or self::N7_RawMudbrick]
            | /Defs/TerrainDef/costList/*[self::AdobeRaw or self::N7_RawMudbrick]
        </xpath>
        <name>DZ_Adobe</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/RecipeDef/ingredients/*//filter/thingDefs/li[text()="AdobeRaw" or text()="N7_RawMudbrick"] 
            | /Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="AdobeRaw" or text()="N7_RawMudbrick"] 
            | /Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="AdobeRaw" or text()="N7_RawMudbrick"]
        </xpath>
        <value>
            <li>DZ_Adobe</li>
        </value>
    </Operation>

</Patch>