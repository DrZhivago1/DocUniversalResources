<Patch>

    <!--==========
    Chromium {Cupro's Alloys (Continued), Expanded Materials - Metals}
    ==========-->

    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.CuprosAlloys</li>
            <li>Argon.VMEu</li>
        </packageIds>
        <match Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>
                <ThingDef Name="DZ_Chromium" ParentName="DZ_MetalIngotBase">
                    <defName>DZ_Chromium</defName>
                    <label>Chromium</label>
                    <description>Chromium: A steely-grey, lustrous, hard and brittle transition metal.</description>
                    <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                    <graphicData />
                    <soundInteract>Metal_Drop</soundInteract>
                    <soundDrop>Metal_Drop</soundDrop>
                    <statBases>
                        <MarketValue>4</MarketValue>                        <!--Gold = 100(10x10 since small volume)-->
                        <Mass>0.2</Mass>                        <!--Steel = 0.5-->
                        <StuffPower_Armor_Sharp>0.58</StuffPower_Armor_Sharp>
                        <StuffPower_Armor_Blunt>0.45</StuffPower_Armor_Blunt>
                        <StuffPower_Armor_Heat>0.32</StuffPower_Armor_Heat>
                        <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
                        <StuffPower_Insulation_Heat>0.5</StuffPower_Insulation_Heat>
                        <SharpDamageMultiplier>0.98</SharpDamageMultiplier>
                        <BluntDamageMultiplier>0.98</BluntDamageMultiplier>
                    </statBases>
                    <useHitPoints>false</useHitPoints>
                    <healthAffectsPrice>false</healthAffectsPrice>
                    <stuffProps>
                        <categories>
                            <li>Metallic</li>
                        </categories>
                        <commonality>0.05</commonality>                        <!--Gold = 0.02, Steel = 1-->
                        <color />
                        <constructEffect>ConstructMetal</constructEffect>
                        <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
                        <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
                        <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
                        <!--<statOffsets>
                                    <Beauty>2</Beauty>
                                </statOffsets>-->
                        <statFactors>
                            <MaxHitPoints>0.95</MaxHitPoints>
                            <Beauty>1.68</Beauty>
                            <Flammability>0.4</Flammability>                            <!--Steel = 0.4-->
                        </statFactors>
                    </stuffProps>
                    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
                    <burnableByRecipe>false</burnableByRecipe>
                    <smeltable>true</smeltable>
                    <thingCategories>
                        <li>ResourcesRaw</li>
                    </thingCategories>
                    <deepCommonality>3</deepCommonality>                    <!--Gold = 0.5, Steel = 4-->
                    <deepCountPerPortion>25</deepCountPerPortion>                    <!--Steel = 45-->
                    <deepLumpSizeRange>10~20</deepLumpSizeRange>                    <!--Steel = 20~30-->
                    <tradeTags />
                    <comps />
                </ThingDef>
            </value>
        </match>
    </Operation>

    <!--==========
    Mods
    ==========-->

    <!--Cupro's Alloys (Continued)-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.CuprosAlloys</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Chromium"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Cupro/Item/Material/Chromium</texPath>
                            <graphicClass>Graphic_Random</graphicClass>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Chromium"]/stuffProps/color</xpath>
                    <value>
                        <color>(190,205,210)</color>
                    </value>
                </li>
                <!--Use thingCategories-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Chromium"]/thingCategories</xpath>
                    <value>
                        <li>CAL_Metals</li>
                    </value>
                </li>
                <!--Use tradeTags-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Chromium"]/tradeTags</xpath>
                    <value>
                        <li>Exotic</li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="CAL_Chromium"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Expanded Materials - Metals-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Argon.VMEu</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DZ_Chromium"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Item/Resource/VMEu_Chromium</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                        </graphicData>
                    </value>
                </li>
                <!--Replace stuffProps color to match-->
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Chromium"]/stuffProps/color</xpath>
                    <value>
                        <color>(112,117,124)</color>
                    </value>
                </li>
                <!--Use thingCategories-->
                <li Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="DZ_Chromium"]/thingCategories</xpath>
                    <value>
                        <li>VMEu_SpecialMetals</li>
                    </value>
                </li>
                <!--Use tradeTags-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Aluminum"]/tradeTags</xpath>
                    <value>
                        <li>Exotic</li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="VMEu_Chromium"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Universal Replacements
    ==========-->
    <!--CAL_Chromium = Cupro's Alloys (Continued)-->
    <!--VMEu_Chromium = Expanded Materials - Metals-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/*//thingDef[text()="CAL_Chromium" or text()="VMEu_Chromium"]</xpath>
        <value>
            <thingDef>DZ_Chromium</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>
        <xpath>/Defs//*[self::CAL_Chromium or self::VMEu_Chromium]</xpath>
        <name>DZ_Chromium</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/*//li[text()="CAL_Chromium" or text()="VMEu_Chromium"]</xpath>
        <value>
            <li>DZ_Chromium</li>
        </value>
    </Operation>

</Patch>