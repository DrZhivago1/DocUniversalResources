                    <xpath>/Defs/ThingDef[@Name="DZ_BlocksConcrete"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Item/Resource/StoneBlocks</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
