    <!--[RF] Concrete (Continued)-->
    <!--Concrete for Fertile Fields-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.Concrete</li>
            <li>malkav73.concrete</li>
        </packageIds>
        <match Class="PatchOperationSequence">
