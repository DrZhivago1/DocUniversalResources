<Patch>

    <!--==========
    Amethyst {Gems (Continued), Kura's Extra Gems, Gemstones}
    ==========-->

    <!--DUR Amethyst, with whitelist-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.Gems</li>
            <li>Kura.ExtraGems</li>
            <li>zylle.Gemstones</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef Name="DZ_Amethyst" ParentName="ResourceBase">
                            <defName>DZ_Amethyst</defName>
                            <label>Amethyst</label>
                            <description>Amethyst: A transparent and violet variety of quartz.</description>
                            <!--=====Nodes below this line are merged from mods to be universally applicable=====-->
                            <graphicData />
                            <soundInteract>ChunkRock_Drop</soundInteract>
                            <soundDrop>ChunkRock_Drop</soundDrop>
                            <statBases>
                                <MarketValue>50</MarketValue>                                <!--Gold = 100(10x10 since small volume)-->
                                <Mass>0.25</Mass>                                <!--Steel = 0.5-->
                                <RoyalFavorValue>0.015</RoyalFavorValue>                                <!--Gold = 0.015-->
                                <Flammability>0</Flammability>
                                <StuffPower_Armor_Sharp>0.9</StuffPower_Armor_Sharp>
                                <StuffPower_Armor_Blunt>0.45</StuffPower_Armor_Blunt>
                                <StuffPower_Armor_Heat>0.54</StuffPower_Armor_Heat>
                                <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
                                <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
                                <SharpDamageMultiplier>0.75</SharpDamageMultiplier>
                                <BluntDamageMultiplier>1.25</BluntDamageMultiplier>
                            </statBases>
                            <useHitPoints>false</useHitPoints>
                            <healthAffectsPrice>false</healthAffectsPrice>
                            <stuffProps>
                                <categories>
                                    <li>Stony</li>
                                </categories>
                                <commonality>0.03</commonality>                                <!--Gold = 0.02-->
                                <color>(162, 118, 174)</color>
                                <constructEffect>ConstructMetal</constructEffect>
                                <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
                                <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
                                <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
                                <statOffsets>
                                    <Beauty>10</Beauty>                                    <!--Gold = 20-->
                                </statOffsets>
                                <statFactors>
                                    <Flammability>0</Flammability>
                                    <Beauty>2</Beauty>                                    <!--Gold = 4-->
                                    <MaxHitPoints>0.5</MaxHitPoints>
                                    <WorkToBuild>3</WorkToBuild>
                                    <WorkToMake>3</WorkToMake>
                                    <MeleeWeapon_CooldownMultiplier>1.25</MeleeWeapon_CooldownMultiplier>
                                </statFactors>
                            </stuffProps>
                            <deepCommonality>0.25</deepCommonality>                            <!--Gold = 0.5-->
                            <deepCountPerPortion>5</deepCountPerPortion>
                            <deepLumpSizeRange>3~10</deepLumpSizeRange>
                            <burnableByRecipe>false</burnableByRecipe>
                            <smeltable>true</smeltable>
                            <thingCategories>
                                <li>ResourcesRaw</li>
                            </thingCategories>
                            <tradeTags />
                            <comps />
                        </ThingDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Gems (Continued)-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Mlie.Gems</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Things/Item/Resource/Amethyst</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/graphicData</xpath>
                        <value>
                            <texPath>Things/Item/Resource/Amethyst</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                        </value>
                    </nomatch>
                </li>
                <!--Use thingCategories-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/thingCategories</xpath>
                    <value>
                        <li>Gems</li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Amethyst"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Kura's Extra Gems-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>Kura.ExtraGems</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Amethyst</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/graphicData</xpath>
                        <value>
                            <texPath>Amethyst</texPath>
                            <graphicClass>Graphic_Single</graphicClass>
                        </value>
                    </nomatch>
                </li>
                <!--Use thingCategories-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/thingCategories</xpath>
                    <value>
                        <li>KGems</li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Amethyst"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--Gemstones-->
    <Operation Class="D9Framework.PatchOperationFindPackage">
        <packageIds>
            <li>zylle.Gemstones</li>
        </packageIds>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Use/replace graphics-->
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/graphicData/texPath</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/graphicData</xpath>
                        <value>
                            <graphicData>
                                <texPath>Things/Item/Resource/Gemstone</texPath>
                                <graphicClass>Graphic_StackCount</graphicClass>
                                <color>(162, 118, 174)</color>
                            </graphicData>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/graphicData</xpath>
                        <value>
                            <texPath>Things/Item/Resource/Gemstone</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                            <color>(162, 118, 174)</color>
                        </value>
                    </nomatch>
                </li>
                <!--Use thingCategories-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="DZ_Amethyst"]/thingCategories</xpath>
                    <value>
                        <li>Z_Gemstones</li>
                    </value>
                </li>
                <!--Remove resource-->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Z_Amethyst"]</xpath>
                </li>
            </operations>
        </match>
    </Operation>

    <!--
        Universal Amethyst Replacements
        -->
    <!--Amethyst = Gems (Continued), Kura's Extra Gems-->
    <!--Z_Amethyst = Gemstones-->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/TraderKindDef/stockGenerators/*//thingDef[text()="Amethyst" or text()="Z_Amethyst"]</xpath>
        <value>
            <thingDef>DZ_Amethyst</thingDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@ParentName="RockBase"]/building/mineableThing[text()="Amethyst" or text()="Z_Amethyst"]</xpath>
        <value>
            <mineableThing>DZ_Amethyst</mineableThing>
        </value>
    </Operation>

    <Operation Class="PatchOperationSetName">
        <success>Always</success>
        <xpath>/Defs/ThingDef/modExtensions/*//products/*[self::Amethyst or self::Z_Amethyst] 
            | /Defs/ThingDef/costList/*[self::Amethyst or self::Z_Amethyst] 
            | /Defs/RecipeDef/products/*[self::Amethyst or self::Z_Amethyst]
            | /Defs/TerrainDef/costList/*[self::Amethyst or self::Z_Amethyst]
        </xpath>
        <name>DZ_Amethyst</name>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/RecipeDef/ingredients/*//filter/thingDefs/li[text()="Amethyst" or text()="Z_Amethyst"] 
            | /Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="Amethyst" or text()="Z_Amethyst"] 
            | /Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="Amethyst" or text()="Z_Amethyst"]
        </xpath>
        <value>
            <li>DZ_Amethyst</li>
        </value>
    </Operation>

</Patch>